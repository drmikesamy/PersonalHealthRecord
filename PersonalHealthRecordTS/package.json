{
  "name": "personal-health-record-ts",
  "version": "1.0.0",
  "description": "Personal Health Record Manager using TypeScript, HTMX, Nostr and FHIR",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start": "node dist/server.js",
    "serve": "http-server . -p 3000"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1"
  }
}
